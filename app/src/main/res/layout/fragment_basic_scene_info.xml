<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$DummySectionFragment" >

    <TableLayout
        android:id="@+id/sceneInfoTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:shrinkColumns="0" >

        <include
            android:id="@+id/infoStatusRow"
            layout="@layout/view_status_row" />

        <TableRow
            android:id="@+id/sceneInfoElementHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sceneInfoElementLabel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_h"
                android:layout_marginRight="@dimen/margin_h"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/basic_scene_info_elements"
                android:textColor="@color/detail_text_dark"
                android:textSize="@dimen/font_size_2" />

        </TableRow>

        <include
            android:id="@+id/sceneInfoDivider1"
            layout="@layout/view_divider_row" />

        <TableLayout
            android:id="@+id/sceneInfoElementTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </TableLayout>

</ScrollView>
