<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupInfoScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity$DummySectionFragment" >

    <TableLayout
        android:id="@+id/dimmableItemInfoTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_row_bg"
        android:paddingBottom="@dimen/margin_v"
        android:stretchColumns="0"
        android:shrinkColumns="0" >

        <include
            android:id="@+id/infoStatusRow"
            layout="@layout/view_status_row" />

        <include
            android:id="@+id/groupInfoDivider1"
            layout="@layout/view_divider_row" />

        <include
            android:id="@+id/infoStateRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            layout="@layout/view_state_row" />

        <include
            android:id="@+id/groupInfoDivider2"
            layout="@layout/view_divider_row" />

        <include
            android:id="@+id/groupInfoMembers"
            layout="@layout/view_name_value_row" />

        <include
            android:id="@+id/groupInfoDivider3"
            layout="@layout/view_divider_row" />

    </TableLayout>

</ScrollView>
