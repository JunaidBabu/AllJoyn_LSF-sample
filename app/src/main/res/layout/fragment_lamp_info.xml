<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lampInfoScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_row_bg"
    android:fillViewport="true" >

    <TableLayout
        android:id="@+id/lampInfoTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_row_bg"
        android:paddingBottom="@dimen/margin_v"
        android:stretchColumns="0"
        android:shrinkColumns="0" >

        <include
            android:id="@+id/infoStatusRow"
            layout="@layout/view_status_row" />

        <include
            android:id="@+id/infoDivider1"
            layout="@layout/view_divider_row" />

        <include
            android:id="@+id/infoStateRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            layout="@layout/view_state_row" />

        <include
            android:id="@+id/infoDivider2"
            layout="@layout/view_divider_row" />

        <TableRow
            android:id="@+id/lampInfoTableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin_h"
                android:layout_marginRight="@dimen/margin_h"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lampInfoLabelLumens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/lamp_params_lumens"
                    android:textColor="@color/detail_text_dark"
                    android:textSize="@dimen/font_size_1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lampInfoTextLumens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_2"
                    android:textColor="@color/detail_text" />
             </LinearLayout>
        </TableRow>

        <include
            android:id="@+id/lampInfoDivider3"
            layout="@layout/view_divider_row" />

        <TableRow
            android:id="@+id/lampInfoTableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin_h"
                android:layout_marginRight="@dimen/margin_h"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lampInfoLabelEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/lamp_params_energy"
                    android:textColor="@color/detail_text_dark"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_1" />

                <TextView
                    android:id="@+id/lampInfoTextEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_2"
                    android:textColor="@color/detail_text"/>
            </LinearLayout>
        </TableRow>

        <include
            android:id="@+id/lampInfoDivider4"
            layout="@layout/view_divider_row" />

        <TableRow
            android:id="@+id/lampInfoTableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/margin_h"
                android:layout_marginRight="@dimen/margin_h"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lampInfoLabelDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/lamp_details"
                    android:textColor="@color/detail_text_dark"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_1" />

                <TextView
                    android:id="@+id/lampInfoTextDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_text"
                    android:textSize="@dimen/font_size_2" />
            </LinearLayout>
        </TableRow>

        <include
            android:id="@+id/lampInfoDivider5"
            layout="@layout/view_divider_row" />
    </TableLayout>

</ScrollView>
