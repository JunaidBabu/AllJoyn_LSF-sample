<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enterNameRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/dialog_button_bg">

    <TextView
        android:id="@+id/enterNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:paddingBottom="9dp"
        android:paddingTop="15dp"
        android:textColor="@color/detail_text_dark"
        android:textSize="@dimen/font_size_2"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enterNumberText"
        android:layout_height="32dp"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/enterNumberLabel"
        android:layout_toLeftOf="@+id/enterNumberUnits"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:background="@color/dialog_row_bg"
        android:textSize="@dimen/font_size_2"
        android:textColor="@color/background"
        android:maxLength="20" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/enterNumberUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterNumberLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:paddingBottom="9dp"
        android:paddingTop="15dp"
        android:text="@string/units_seconds"
        android:textColor="@color/detail_text_dark"
        android:textSize="@dimen/font_size_3"
        android:textStyle="bold" />
</RelativeLayout>
