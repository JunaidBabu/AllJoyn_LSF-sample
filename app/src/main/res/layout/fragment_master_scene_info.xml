<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$DummySectionFragment" >

    <TableLayout
        android:id="@+id/sceneInfoTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_v"
        android:paddingTop="@dimen/margin_v"
        android:stretchColumns="0" >

        <include
            android:id="@+id/infoStatusRow"
            layout="@layout/view_status_row" />

        <include
            android:id="@+id/sceneInfoDivider1"
            layout="@layout/view_divider_row" />

        <include
            android:id="@+id/sceneInfoRowMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            layout="@layout/view_scene_members_row" />

        <include
            android:id="@+id/sceneInfoDivider2"
            layout="@layout/view_divider_row" />
    </TableLayout>

</ScrollView>
